<div class="sm:flex sm:justify-between">
<h2 class=" md:mx-auto px-6 py-3 text-left text-lg font-medium text-gray-500 uppercase tracking-wider">
              Mis cuadernos
            </h2>
</div>
<div class="flex flex-col">
  <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
      <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                TÃ­tulo
              </th>
              <th scope="col" class="relative px-6 py-3">
                <span class="sr-only">Edit</span>
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
          <% @books.each do |book| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900">
                    <%= link_to book.title, user_book_notes_path(current_user,book)%></td> 
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <% if book == @books.first %>
                  <%= link_to "Editar", edit_user_book_path(current_user,book), :class  => "text-indigo-600 hover:text-indigo-900" %>
                  <%= link_to "Exportar",  user_book_export_path(current_user.id, book), :class  => "text-indigo-600 hover:text-indigo-900" , data: { confirm: "Desea exportar este cuaderno?."}   %>

                <% else %>
                  <%= link_to "Editar", edit_user_book_path(current_user,book), :class  => "text-indigo-600 hover:text-indigo-900" %>
                  <%= link_to "Eliminar",[current_user ,book], method: :delete, data: { confirm: "Desea eliminar este cuaderno? Mira que se va a borrar todo su contenido."} , :class => "text-indigo-600 hover:text-indigo-900" %>
                <% end %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
   <button class="  md:mx-auto px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
    <%= link_to "Agregar nuevo cuaderno ", new_user_book_path %>
   </button>
</div>